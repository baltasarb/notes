<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".activities.TeamMembersActivity"
                                                   tools:layout_editor_absoluteY="81dp">


    <TextView
            android:id="@+id/teamNameTextView"
            android:layout_width="365dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.034"/>

    <TextView
            android:id="@+id/teamDescriptionTextView"
            android:layout_width="365dp"
            android:layout_height="48dp"
            android:text="@string/no_description_available"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17"/>

    <ListView
            android:id="@+id/teamMembersListView"
            android:layout_width="368dp"
            android:layout_height="227dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamDescriptionTextView"
            app:layout_constraintTop_toTopOf="parent"/>

    <include
            android:id="@+id/spinnerProgressBar"
            layout="@layout/spinner_progress_bar"
            android:layout_width="69dp"
            android:layout_height="61dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/chatButton"
            android:layout_width="124dp"
            android:layout_height="38dp"
            android:text="@string/chat_button"
            android:enabled="false"
            android:onClick="openChat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.816"/>

    <include
            android:id="@+id/signOutButton"
            layout="@layout/sign_out_button"
            android:layout_width="132dp"
            android:layout_height="33dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <include
            android:id="@+id/errorInclude"
            layout="@layout/error_layout"
            android:layout_width="368dp"
            android:layout_height="227dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamDescriptionTextView"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>